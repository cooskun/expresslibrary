extends layout

block content
  h1 Genre: #{ genre.name }
  
  div(style="margin: 20px 0 0 20px;")
  
    h4 Books
    
    dl
    each book in genre_books
      dt
        a(href=book.url) #{ book.title }
      dd #{ book.summary }
      
    else
      p This genre has no books

    hr
    p(style='margin-top: 30px;')
      a(href=genre.url + '/delete') Delete genre
    p
      a(href=genre.url + '/update') Genre Book
   
