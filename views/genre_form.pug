extends layout

block content
  h1 #{title}
  
  form(method='POST' action='')
    .form-group
      label(for='name') Genre : 
      input#name.form-control(type='text' name='name' placeholder='Fantasy, Poetry etc.' required='true' value=(undefined===genre ? '' : genre.name))
    button.btn.btn-primary(type="submit") Submit
    
  if errors
    ul
      for error in errors
        li!= error.msg

  if warn
    p(style='margin-top: 20px;') #{warn} : #[strong #{genre}]
