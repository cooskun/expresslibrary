extends layout

block content
  h1= title
  
  form(action="" method="POST")
    .form-group
      label(for='title') Title : 
      input#title.form-control(type='text', name='title' placeholder='Name of book' required value=(undefined===book ? '' : book.title))
    
    .form-group
      label(for='author') Author : 
      select#author.form-control(name='author' placeholder='Select author' required='true')
        for author in authors
          if book
            option(value=author._id selected=(author._id.toString() == book.author_id || author._id.toString() == book.author) ? 'selected' : false) #{author.name}
          else
            option(value=author._id) #{author.name}
    
    .form-group
      label(for='summary') Summary : 
      input#summary.form-control(type='textarea', name='summary' placeholder='Summary' required='true' value=(undefined === book ? '' : book.summary))
      
    .form-group
      label(for='isbn') ISBN : 
      input#isbn.form-control(type='text', name='isbn' placeholder='ISBN' required='true' value=(undefined === book ? '' : book.isbn))
      
    .form-group
      label Genre : 
      div
        for genre in genres
          div(style='display: inline; padding-right: 10px;')
            input.checkbox-input(type='checkbox' name='genre' id=genre._id value=genre._id checked=genre.checked)
            label(for=genre._id) #{genre.name}
            span #{genre.checked}
    
    button.btn.btn-primary(type="submit") Submit
  
  if errors
    ul
      for error in errors
        li!= error.msg
